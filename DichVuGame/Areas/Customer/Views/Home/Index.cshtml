@model DichVuGame.Models.ViewModels.GamesViewModel
@{
    ViewData["Title"] = "Home Page";
}

<body>
    <div class="container">

        <div class="row">

            <div class="col-lg-3">

                <h1 class="my-4" style="font-size : 36.5px;font-family :Bahnschrift ; color:hsl(220, 46%, 48%); ">HCMUTE GAME</h1>
                <div class="list-group">
                    <a href="#" class="list-group-item"><i class="fa fa-thermometer-full"></i> Studios</a>
                    <a href="#" class="list-group-item"><i class="fa fa-ravelry"></i> Studios</a>
                    <a href="#" class="list-group-item"><i class="fa fa-grav"></i> Studios</a>
                </div>

            </div>
            <!-- /.col-lg-3 -->

            <div class="col-lg-9">

                <div id="carouselIndicators" class="carousel slide my-4" data-ride="carousel">
                    <ol class="carousel-indicators">
                        <li data-target="#carouselIndicators" data-slide-to="0" class="active"></li>
                        <li data-target="#carouselIndicators" data-slide-to="1"></li>
                        <li data-target="#carouselIndicators" data-slide-to="2"></li>
                    </ol>
                    <div class="carousel-inner" role="listbox">
                        <div class="carousel-item active">
                            <img class="d-block img-fluid" src="\homepage\startbootstrap-shop-homepage-gh-pages\image\1.jpg" alt="First slide">
                        </div>
                        <div class="carousel-item">
                            <img class="d-block img-fluid" src="\homepage\startbootstrap-shop-homepage-gh-pages\image\4.jpg" alt="Second slide">
                        </div>
                        <div class="carousel-item">
                            <img class="d-block img-fluid" src="\homepage\startbootstrap-shop-homepage-gh-pages\image\5.jpg" alt="Third slide">
                        </div>
                    </div>
                    <a class="carousel-control-prev" href="#carouselIndicators" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carouselIndicators" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
                <section id="game">
                    <div class="row">
                        @if (Model.Games != null)
                        {
                            @foreach (var game in Model.Games)
                            {
                                <div class="col-lg-4 col-md-6 mb-4" @*style="width : 260px"*@>
                                    <div class="card h-100" style="text-align:center!important; box-shadow: 5px 5px 5px grey;">
                                        <img class="card-img" src="@game.GamePoster" />
                                        <div class="card-body" style="height:85px">
                                            <h4 class="card-title">
                                                <a asp-area="Customer" asp-controller="Home" asp-action="Details" asp-route-id="@game.ID">@game.Gamename</a>
                                            </h4>
                                            <h5>@game.Price VNĐ</h5>
                                            <p class="card-text"></p>
                                        </div>

                                        <div class="card-footer" style="text-align:center!important;background-color:white;border:none; height:35px">
                                            <a asp-area="Customer" asp-controller="Home" asp-action="AddToCart" asp-route-id="@game.ID"><i class="fas fa-shopping-cart"></i></a>
                                        </div>
                                        <div class="card-footer" style="text-align:center!important;background-color:white;border:none">
                                            <a type="button" class="btn btn-outline-primary" style=" width : 85px;height : 35px; font-size:small" asp-area="Customer" asp-controller="Cart" asp-action="Index" asp-route-id="@game.ID">Mua ngay</a>
                                        </div>
                                    </div>

                                </div>


                            }
                        }
                    </div>
                </section>
                <section id="gameaccount">
                </section>
                <div class="row">





                </div>
                <!-- /.row -->

            </div>
            <!-- /.col-lg-9 -->

        </div>
        <!-- /.row -->

    </div>
    <script>
        function CloseNotification() {
            document.getElementById("notification").hidden = true;
        }
    </script>
</body>