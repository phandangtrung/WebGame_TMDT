@model DichVuGame.Models.ViewModels.GamesViewModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/AdminHome/_CMSLayout.cshtml";
}

<h1>Create</h1>

<h4>Code</h4>
<hr />

<div class="p-4 border rounded">
    <form asp-action="Create">
        <div class="text-danger">@Html.ValidationMessage("SameCode")</div>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <label>Game: @Model.Game.Gamename</label>
        <input hidden asp-for="@Model.Game.ID" />
        <div class="form-group row">
            <div class="col-3"><label asp-for="@Model.Code.Gamecode" class="control-label"></label></div>
            <div class="col-5">
                <input asp-for="@Model.Code.Gamecode" class="form-control" />
                <span asp-validation-for="@Model.Code.Gamecode" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <input type="submit" value="Thêm" class="btn btn-primary" />
        </div>
    </form>
</div>

<div>
    <a class="btn btn-secondary" asp-area="Admin" asp-controller="Games" asp-action="Index">Quay lại</a>
</div>

