@model DichVuGame.Models.ViewModels.GameAccountViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>GameAccount</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Game.Gamename">@Model.Game.Gamename</label>
                <input asp-for="Game.ID" value="@Model.Game.ID" hidden/>
            </div>
            <div class="form-group">
                <label asp-for="GameAccount.Username" class="control-label"></label>
                <input asp-for="GameAccount.Username" class="form-control" />
                <span asp-validation-for="GameAccount.Username" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GameAccount.Password" class="control-label"></label>
                <input asp-for="GameAccount.Password" class="form-control" />
                <span asp-validation-for="GameAccount.Password" class="text-danger"></span>
            </div>
            <div class="form-group form-check" hidden>
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="GameAccount.Available" checked/> @Html.DisplayNameFor(model => model.GameAccount.Available)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Thêm tài khoản" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

